<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baidu.shareplugin"
    android:versionCode="12"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <!-- ======================= permissions ========================= -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permissions used by WebView. -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Permissions used by Download. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 用于记录uid -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />


    <application
        android:name="com.baidu.share.SharePluginApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:exported="true"
        android:launchMode="singleTop"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name="com.baidu.share.SharePluginLauncherActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Dialog"
            android:taskAffinity="com.baidu.shareplugin"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.baidu.cloudsdk.social.share.handler.LocalShareActivity"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
            android:theme="@style/libui_BDTheme.Translucent" >
        </activity>

        <!-- 新浪微博的回调Activity -->
        <activity
            android:name="com.baidu.cloudsdk.social.oauth.SocialOAuthActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/libui_BDTheme.Translucent.NoTitleBar" >
           
        </activity>
        <activity
            android:name="com.baidu.share.wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/libui_BDTheme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baidu.cloudsdk.social.share.handler.QQFriendShareReceiverActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent100485198" />
            </intent-filter>
        </activity>
        <meta-data android:name="gpt_union_process" android:value="true"/>
    </application>

</manifest>
